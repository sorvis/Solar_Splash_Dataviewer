@model IEnumerable<Solarsplash_Dataviewer.Models.RunData>
           
@helper Truncate(string input, int length)
{ 
    if (input.Length <= length)
    { 
        @input 
    }
    else
    { 
        @input.Substring(0, length)<text>...</text> 
    } 
}

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
            DateAndTime
        </th>
        <th>
            Acrchived
        </th>
        <th>
            AcrchivedFileName
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Truncate(@item.Description, 50)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateAndTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Acrchived)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AcrchivedFileName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
            @Html.ActionLink("Details", "Details", new { id = item.id })
            @Html.ActionLink("See Data", "SeeData", new { id = item.id }) 
            @Html.ActionLink("Delete", "Delete", new { id = item.id })
        </td>
    </tr>
}

</table>
